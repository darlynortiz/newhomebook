<section id="contact-page">
  <div class="container contact-form">
    <div class="center">    
<h2>Editar</h2>
    </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="row contact-wrap"> 
 <div class="col-sm-5 col-sm-offset-1">
  <div class="form-group">
    <%= f.label :Foto_de_perfil %><br />
    <%= f.file_field :profile_picture, autofocus: true %>
  </div>

   <div class="form-group">
    <%= f.label :Nombres %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control"  %>
  </div>
  
   <div class="form-group">
    <%= f.label :Apellidos %><br />
    <%= f.text_field :last_name, autofocus: true, class: "form-control"  %>
  </div>

   <div class="form-group">
    <%= f.label :Direccion %><br />
    <%= f.text_field :address, autofocus: true, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :Correo_electronico %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control"  %>
  </div>
</div>
 <div class="col-sm-5">      
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :Contrase침a %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
    <% if @minimum_password_length %>
      <br />
      <%= @minimum_password_length %> Caracteres minimos</>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :Confirmar_la_contrase침a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :Contrase침a_actual %><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" ,class: "btn btn-primary btn-lg"%>
  </div>
<% end %>

 <div class="actions">
    <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Est치s seguro?" }, method: :delete, class: "btn btn-primary btn-lg" %>

  </div>
 
<%= link_to "Regresar", :back %>
</div>
</div>
</div> 
</section> 
